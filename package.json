{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run --workspace @peculiar/react-components dev",
    "bootstrap": "npm install",
    "bootstrap:undo": "lerna clean --yes",
    "bootstrap:upgrade": "npm upgrade-interactive --latest",
    "clean": "lerna run --parallel clean",
    "build": "npm run build --workspaces",
    "test": "npm run test:coverage --workspaces",
    "check:types": "npm run check:types --workspaces",
    "lint": "eslint",
    "prepare": "npm run build",
    "publish:version": "lerna publish",
    "publish:canary": "lerna publish --canary"
  },
  "devDependencies": {
    "@emotion/jest": "^11.13.0",
    "@peculiar/eslint-config-base": "^0.2.7",
    "@peculiar/eslint-config-react": "^0.2.7",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.19.19",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "@vitest/coverage-v8": "^4.0.17",
    "jsdom": "27.0.0",
    "lerna": "^9.0.1",
    "rimraf": "^6.0.1",
    "vitest": "^4.0.17"
  },
  "license": "MIT",
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": ">=24",
      "onFail": "warn"
    },
    "packageManager": {
      "name": "npm",
      "version": ">=10",
      "onFail": "error"
    }
  }
}
